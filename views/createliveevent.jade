extends layout

block extraheader
	link(rel='stylesheet', href='/stylesheets/forms.css')

block content
	div.col-md-4.col-md-offset-4
		h1 Create a live event
		form(id="createevent", action="/manager/createevent", method="POST", enctype="multipart/form-data")
			ul#progressbar
				li.active Sport
				li Game Settings
				li Team details
			fieldset#form_sport_type.form-group.form_section
				h2.fs-title Sport
				h3.fs-subtitle Choose a sport for your event
				label.radio
					input.form_field(type="radio", name="sport", value="football")
					| Football
				label.radio
					input.form_field(type="radio", name="sport", value="volleyball")
					| Volleyball
				.form_alert
				input(type="button" name="next" class="next action-button" value="Next")
			fieldset#form_settings.form-group.form_section
				h2.fs-title Game Settings
				h3.fs-subtitle Choose your game settings
				#form_football_settings.form_game_specific.hidden
					label Game length in minutes: 
						input.form_field.form-control(type="Number", name="game_length", min="0", max="90",step="1",value="60")
				#form_volleyball_settings.form_game_specific.hidden
					label Sets to win: (Note: This is the minimum number of sets needed to win)
						input.form_field.form-control(type="Number", name="sets_win", min="2", max="2", step="1", value="2")
					label Points per set:
						input.form_field.form-control(type="Number", name="sets_pts", min="1", max="25", step="1", value="25")
					label Number of points in tie break
						input.form_field.form-control(type="Number", name="sets_tie_pts", min="1", max="15", step="1", value="15")
				.form_alert
				input(type="button" name="previous" class="previous action-button" value="Previous")
				input(type="button" name="next" class="next action-button" value="Next")
			fieldset#form_team_inf.form-group.form_section
				h2.fs-title Team details
				h3.fs-subtitle Information viewers will see on the event
				input.form-control(type="text", name="event_name", class="form-control",placeholder="Name of the event",required)
				label Event logo:
					input(type="file", name="event_logo")
				input.form-control(type="text", name="team_home", class="form-control", placeholder="Home team", required)
				label Home team logo:
					input(type="file", name="team_home_logo")
				input.form-control(type="text", name="team_away", class="form-control", placeholder="Guest team", required)
				label Guest team logo:
					input(type="file", name="team_away_logo")
				input(type="button" name="previous" class="previous action-button" value="Previous")
				input(type="submit" name="submit" class="submit action-button" value="Submit")
				//button(class='btn btn-primary btn-block', type='submit') Create
			script(src='/javascripts/forms.js')