extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				#user
					h1.text-center.login-title Welcome #{user.firstName}.
					p Here you can:
					a(href='/manager/createliveevent') Create new events
					br
					a(href='/manager/pastevents/delete') Delete past events
					br
					a(href='/manager/liveevents/delete') Delete created live events
					br
					a(href='/manager/liveevents/remote') Remote control a live event
					br
					a(href='/manager/signout', class='text-center new-account') Sign Out