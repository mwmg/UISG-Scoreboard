extends layout

block content
	div.col-md-4.col-md-offset-4
		h1 Create a live event
		form(class="createevent", action="/manager/createevent", method="POST")
			label Sport:
			select(name="sport", autofocus)
				option(value="Football") Football
				option(value="Basketball", disabled) Basketball
				option(value="Volleyball", disabled) Volleyball
			input(type="text", name="event_name", class="form-control",placeholder="Name of the event",required)
			label Event logo:
			input(type="file", name="tournament_logo")
			input(type="text", name="team_home", class="form-control", placeholder="Home team", required)
			label Home team logo:
			input(type="file", name="team_home_logo")
			input(type="text", name="team_away", class="form-control", placeholder="Guest team", required)
			label Guest team logo:
			input(type="file", name="team_away_logo")
			label Game length in minutes: 
			input(type="Number", name="game_length", min="0", max="90",step="1", value="0",placeholder="Game length", required)
			button(class='btn btn-lg btn-primary btn-block', type='submit') Create